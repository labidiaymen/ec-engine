// Variable Declarations with var
// var can be reassigned and has function scope

var x = 42;
console.log("x:", x);

var name = "ECEngine";
console.log("name:", name);

// Reassigning var
x = 100;
console.log("x after reassignment:", x);

// var without initializer
var uninitializedVar;
console.log("uninitializedVar:", uninitializedVar);
