// Variable Declarations with const
// const cannot be reassigned and must have an initializer

const PI = 3.14159;
console.log("PI:", PI);

const greeting = "Welcome to ECEngine";
console.log("greeting:", greeting);

const isReady = 1; // Using 1 for true
console.log("isReady:", isReady);

// Note: const variables cannot be reassigned
