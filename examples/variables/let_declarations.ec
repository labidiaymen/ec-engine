// Variable Declarations with let
// let can be reassigned and has block scope

let y = 25;
console.log("y:", y);

let message = "Hello World";
console.log("message:", message);

// Reassigning let
y = 50;
console.log("y after reassignment:", y);

// let without initializer
let uninitializedLet;
console.log("uninitializedLet:", uninitializedLet);
