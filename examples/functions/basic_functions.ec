// Basic Function Declarations
// Functions are declared with the 'function' keyword

function greet() {
    return "Hello, World!";
}

function add(a, b) {
    return a + b;
}

function multiply(x, y) {
    return x * y;
}

// Calling functions
var greeting = greet();
console.log("Greeting:", greeting);

var sum = add(5, 3);
console.log("5 + 3 =", sum);

var product = multiply(4, 7);
console.log("4 * 7 =", product);
